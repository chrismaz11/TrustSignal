{
  "name": "deed-shield",
  "private": true,
  "license": "UNLICENSED",
  "version": "0.1.0",
  "type": "commonjs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "ethers": "^6.13.4",
    "fastify": "5.7.4",
    "hardhat": "3.1.6",
    "next": "^15.5.11",
    "node-notifier": "^10.0.1",
    "pdf-parse": "^1.1.1"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace apps/api\" \"npm:dev --workspace apps/web\"",
    "build": "npm -ws run build",
    "lint": "eslint .",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "demo": "tsx scripts/demo.ts",
    "gen:keys": "node scripts/gen-issuer-keys.js",
    "seed:issuer": "node scripts/seed-issuer-public.js",
    "seed:parcel": "cd apps/api && tsx scripts/seed-parcel.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "tsx": "^4.15.7",
    "typescript": "5.5.4",
    "vitest": "^3.2.4"
  }
}
